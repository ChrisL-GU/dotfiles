[alias]
    gr = log --graph --full-history --all --color --pretty=tformat:\"%x1b[31m%h%x09%x1b[32m%d%x1b[0m%x20%s%x20%x1b[33m(%an)%x1b[0m\"
    gs = log --graph -10 --all --color --pretty=tformat:\"%x1b[31m%h%x09%x1b[32m%d%x1b[0m%x20%s%x20%x1b[33m(%an)%x1b[0m\"
    gf = log -p -s 
    s = status
    l = log -n 1 --format=oneline
    co = checkout
    clear = !git reset --hard && git clean -f -d
    find = log --pretty=\"format:%Cgreen%H %Cblue%s\" --name-status --grep
    p = !git push $1 $2 && git log -n 1 --format=oneline && :
    pf = !git push --force-with-lease $1 $2 && git log -n 1 --format=oneline && :
    pushf = push --force-with-lease
    a = commit -a --amend --no-edit
